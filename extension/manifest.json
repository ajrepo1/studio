{
  "manifest_version": 3,
  "name": "Summarist - One Click Summary",
  "version": "1.0",
  "description": "Summarize any web page with a single click.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Summarize Page"
  },
  "web_accessible_resources": [{
    "resources": ["content.css", "summarist-icon.svg"],
    "matches": ["<all_urls>"]
  }]
}
