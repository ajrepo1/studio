{
  "manifest_version": 3,
  "name": "Summarist - One Click Summary",
  "version": "1.0",
  "description": "Summarize any web page with a single click.",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Summarize Page"
  }
}
